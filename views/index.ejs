<script>
    $(document).ready(function () {
   
  $("#my-form").submit(function (event) {
    var formData = {
      fullUrl: $("#fullUrl").val(),     
    };    
    $.ajax({
      type: "POST",
      url: "/api/url/shorten",
      data: formData,
      dataType: "json",
      encode: true,
    }).done(function (data) {
        if (data) {
            $("#resp").html(
            '<%=baseUrl%>'  +'/' + data.shortCode 
          );
        }
      console.log(data);
    });

    event.preventDefault();
  });
});
</script>

